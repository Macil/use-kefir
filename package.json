{
  "name": "use-kefir",
  "version": "1.0.1",
  "description": "React hook for allowing components to receive values from a Kefir Observable",
  "main": "dist/src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Macil/use-kefir.git"
  },
  "author": "Chris Cowan <agentme49@gmail.com>",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "prepare": "rimraf dist && tsc && cp index.js.flow dist/src/",
    "watch": "tsc -w",
    "test": "yarn lint && jest && flow check",
    "watch-test": "jest --watchAll",
    "prettier-all": "prettier --write .",
    "lint": "prettier-check '**/*.{ts,tsx,json}'"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ]
  },
  "peerDependencies": {
    "kefir": "^3.0.0",
    "react": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@types/kefir": "^3.8.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-core": "^6.26.3",
    "flow-bin": "^0.138.0",
    "husky": "^4.0.4",
    "jest": "^26.6.3",
    "kefir": "^3.8.6",
    "kefir-bus": "^2.3.1",
    "prettier": "^2.2.1",
    "prettier-check": "^2.0.0",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "greenkeeper": {
    "ignore": [
      "@types/jest",
      "@types/kefir",
      "@types/react",
      "@types/react-dom",
      "flow-bin"
    ]
  }
}
