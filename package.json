{
  "name": "use-kefir",
  "version": "0.1.0",
  "description": "React hook for allowing components to receive values from a Kefir Observable",
  "main": "dist/src/index.js",
  "repository": "git@github.com:Macil/use-kefir.git",
  "author": "Chris Cowan <agentme49@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "rimraf dist && tsc && cp index.js.flow dist/src/",
    "watch": "tsc -w",
    "test": "yarn lint && jest && flow check",
    "watch-test": "jest --watchAll",
    "prettier-all": "prettier --write '**/*.{ts,tsx,json}'",
    "lint": "prettier-check '**/*.{ts,tsx,json}'"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/kefir": "^3.8.1",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "babel-core": "^6.26.3",
    "flow-bin": "^0.98.0",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "kefir": "^3.8.6",
    "kefir-bus": "^2.3.1",
    "prettier": "^1.17.0",
    "prettier-check": "^2.0.0",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "greenkeeper": {
    "ignore": [
      "@types/*",
      "flow-bin"
    ]
  }
}
